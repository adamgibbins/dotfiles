[user]
	name = Adam Gibbins
	email = adam@adamgibbins.com

[format]
	numbered = auto

[color]
	ui          = auto
	interactive = auto

[pager]
	status      = true
	show-branch = true

# Remove empty directories if cloning from SVN (which can commit directories)
[svn]
	rmdir = true

[alias]
	st       = status -sb
	ci       = commit
	co       = checkout
	d        = diff -b
	b        = branch -av
	staged   = diff --cached
	unstaged = diff
	both     = diff HEAD
	worddiff = diff --word-diff
	oneline  = log --pretty --decorate
	amend    = commit --amend
	graph    = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	who      = "!sh -c 'git log -1 --pretty=\"format:%an <%ae>\" --author=\"$1\"' -"
	msg      = commit --allow-empty -m
	unstage  = reset HEAD
	uncommit = reset --soft HEAD^

[format]
	numbered = auto

[core]
	legacyheaders      = false
	usedeltabaseoffset = true
	excludesfile       = /home/aeg/.gitignore

[diff]
	tool = vimdiff

[merge]
	summary = true

[mergetool]
	keepBackup = true

[branch]
	autosetuprebase = always

